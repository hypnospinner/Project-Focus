<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectFocus.View.ProblemDescriptionFeatureView">
  <ContentView.Content>
      <StackLayout>
            <Label>Feature Header</Label>
            <Entry BindingContext="{Binding ProblemHeader}"/>
            <Label>Feature Description</Label>
            <Entry BindingContext="{Binding ProblemDescription}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>